<div class="container">
  <h4 class="card-title mt-5 " style="color:red;font-weight:bold; font-size:30px" >| {{this.parent_cat}} </h4>

    <div class="card">
        <div class="card-header">
          
        </div>
          {{#if this.empty}}    
    <div class="card-body">
      Không có dữ liệu.
    </div>
  {{else}}
        <div class="row">
          
          
      {{#each this.articles }}
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header">
              
            </div>
            <div class="card-body">
             
                <img class="card-img-top custom-img" src="{{extractFirstImage content}}" alt="Card image cap">
                <h6 class="card-title">{{title}}</h6>
                <p class="card-text">{{summary}}</p>
                  <p class="updated-time">Updated {{formatDate updated_at}}</p>
                <a href="/articles/{{id}}" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <ul class="pagination">
      <li class="page-item disabled">
        <a class="page-link">Previous</a>
      </li>
      {{#each this.pageNumbers}}
      {{#if active}}
      <li class="page-item active">
        <a class="page-link" href="#">{{value}}</a>
      </li>
      {{else}}
      <li class="page-item">
        <a class="page-link" href="?id={{../catId}}&page={{value}}">{{value}}</a>
      </li>
      {{/if}}
      {{/each}}
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
    </ul>
   {{/if}}
      </div>

</div>