    <script>
        $(document).ready(function() {
            // Khởi tạo Summernote với dữ liệu mặc định
           

            // Thiết lập nội dung HTML mặc định cho Summernote
           const content = {{{data.content}}}; // This will be the JSON-encoded string in the template
        $('#summernote').summernote('code', content);
        });
    </script>
    <script src="../js/scripts.js"></script>
     <script src="../js/loading.js"></script>
</body>
</html>
